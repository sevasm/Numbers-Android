<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/menuWelcomeText"
        android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <Button android:id="@+id/menuNewGameButton" android:text="@string/menu_new_game"
        android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <Button android:id="@+id/menuChangePlayerButton"
        android:text="@string/menu_change_player" android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
